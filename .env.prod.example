# Production Environment Variables
# Copy to .env.prod and customize for your environment

# Database
DB_PASSWORD=your_secure_db_password_here
DATABASE_URL=postgresql://admin:${DB_PASSWORD}@db:5432/fleet_db

# Redis (for local production testing)
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# Application
NODE_ENV=production
PORT=4000
USE_QUEUE=true

# Security
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here

# Monitoring
LOG_LEVEL=info
METRICS_ENABLED=true